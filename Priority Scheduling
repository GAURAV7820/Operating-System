#include <stdio.h>

typedef struct {
    int pid;
    int arrival_time;
    int burst_time;
    int priority;
    int completion_time;
    int waiting_time;
    int turnaround_time;
    int done;
} Process;

void sortByArrival(Process p[], int n) {
    int i, j;
    Process temp;
    for(i=0; i<n-1; i++) {
        for(j=0; j<n-i-1; j++) {
            if(p[j].arrival_time > p[j+1].arrival_time) {
                temp = p[j];
                p[j] = p[j+1];
                p[j+1] = temp;
            }
        }
    }
}

int main() {
    int n, i, completed = 0, current_time = 0, highest_priority = 1e9, idx = -1;
    float total_waiting = 0, total_turnaround = 0;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    Process p[n];
    int gantt_p[n];
    int gantt_start[n];
    int gantt_index = 0;

    for(i=0; i<n; i++) {
        p[i].pid = i+1;
        printf("Enter arrival time for process %d: ", p[i].pid);
        scanf("%d", &p[i].arrival_time);
        printf("Enter burst time for process %d: ", p[i].pid);
        scanf("%d", &p[i].burst_time);
        printf("Enter priority for process %d (lower number = higher priority): ", p[i].pid);
        scanf("%d", &p[i].priority);
        p[i].done = 0;
    }

    sortByArrival(p, n);

    while(completed < n) {
        highest_priority = 1e9;
        idx = -1;
        for(i=0; i<n; i++) {
            if(!p[i].done && p[i].arrival_time <= current_time && p[i].priority < highest_priority) {
                highest_priority = p[i].priority;
                idx = i;
            }
        }
        if(idx == -1) {
            current_time++;
        } else {
            gantt_p[gantt_index] = p[idx].pid;
            gantt_start[gantt_index] = current_time;
            gantt_index++;

            current_time += p[idx].burst_time;
            p[idx].completion_time = current_time;
            p[idx].turnaround_time = p[idx].completion_time - p[idx].arrival_time;
            p[idx].waiting_time = p[idx].turnaround_time - p[idx].burst_time;

            total_waiting += p[idx].waiting_time;
            total_turnaround += p[idx].turnaround_time;

            p[idx].done = 1;
            completed++;
        }
    }

    printf("\nPID\tArrival\tBurst\tPriority\tCompletion\tWaiting\tTurnaround\n");
    for(i=0; i<n; i++) {
        printf("%-4d\t%-7d\t%-5d\t%-8d\t%-10d\t%-7d\t%-10d\n",
               p[i].pid, p[i].arrival_time, p[i].burst_time, p[i].priority,
               p[i].completion_time, p[i].waiting_time, p[i].turnaround_time);
    }

    printf("\nAverage Waiting Time: %.2f\n", total_waiting/n);
    printf("Average Turnaround Time: %.2f\n\n", total_turnaround/n);

    printf("Gantt Chart:\n ");
    for(i=0; i<gantt_index; i++) {
        printf("-------");
    }
    printf("\n|");
    for(i=0; i<gantt_index; i++) {
        printf("  P%-3d|", gantt_p[i]);
    }
    printf("\n ");
    for(i=0; i<gantt_index; i++) {
        printf("-------");
    }
    printf("\n");
    for(i=0; i<gantt_index; i++) {
        printf("%-7d", gantt_start[i]);
    }
    printf("%-7d\n", current_time);

    return 0;
}
